@{
    ViewData["Title"] = "Home Page";
}
@model ConsultationModel

<form asp-controller="Home" asp-action="Index" method="post">
    <div>
        <label asp-for="Name">Name: </label>
        <input asp-for="Name" type="text" placeholder="Name" /><br />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="Email">Email: </label>
        <input asp-for="Email" type="email" placeholder="Email" /><br />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Date">Date: </label>
        <input asp-for="Date" type="date" placeholder="Date" /><br />
        <span asp-validation-for="Date"></span>
    </div>
    <div>
        <label asp-for="SelectedLanguage">Language: </label>
        <select asp-for="SelectedLanguage">
            <option value="Basis" selected>Basis</option>
            <option value="Javascript">JavaScript</option>
            <option value="Java">Java</option>
            <option value="C#">C#</option>
            <option value="Python">Python</option>
        </select><br />
        <span asp-validation-for="SelectedLanguage"></span>
    </div>

    <button type="submit">Submit</button>
</form>