@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<lr12.Models.UserModel>
<div>
    <a asp-controller="Home" class="btn btn-success" asp-action="Create" method="post">
        Create
    </a>
</div>
<div class="text-center">

    <table class="table">
        <tr>
            <th>Name</th>
            <th>Surname</th>
            <th>Age</th>
            <th></th>
            <th></th>
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Age</td>
                <td>
                    <a asp-controller="Home" class="btn btn-info" asp-action="Edit" method="post" asp-route-id="@item.Id">
                        Edit
                    </a>
                </td>
                <td>
                <form asp-controller="Home" asp-action="Delete" method="Post" asp-route-id="@item.Id">
                        <input type="submit" class="btn btn-danger" value="Delete" />
                </form>
                </td>
            </tr>
        }
    </table>
</div>
