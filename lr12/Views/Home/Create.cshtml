@model lr12.Models.UserModel
<div class="text-center">
    <h1>Create</h1>
</div>
<form method="post" asp-action="Create" asp-controller="Home">
    <div class="input-group mb-2">
        <label class="input-group-text" asp-for="Name">Name</label>
        <input type="text" asp-for="Name" class="form-control" required />
    </div>
    <div class="input-group mb-2">
        <label class="input-group-text" asp-for="Surname">Surname</label>
        <input type="text" asp-for="Surname" class="form-control" required />
    </div>
    <div class="input-group mb-2">
        <label class="input-group-text" asp-for="Age">Age</label>
        <input class="form-control" type="number" asp-for="Age" required />
    </div>
    <div class="d-flex justify-content-center">
        <input type="submit" class="btn btn-primary" value="Add" />
    </div>
</form>
