@model lr12.Models.CompanyModel
<div class="text-center">
    <h1>Create</h1>
</div>
<form method="post" class="container-md row" asp-action="Create" asp-controller="Company">
    <div class="input-group mb-2">
        <label class="input-group-text" asp-for="Name">Name</label>
        <input class="form-control" type="text" asp-for="Name" required />
    </div>
    <div class="input-group mb-2">
        <label class="input-group-text" asp-for="Workers">Count of workers</label>
        <input class="form-control" type="number" asp-for="Workers" required/>
    </div>
    <div class="input-group mb-2">
        <label class="input-group-text" asp-for="Phone">Phone</label>
        <input class="form-control" type="number" asp-for="Phone" required />
    </div>
    <div class="input-group mb-2">
        <label class="input-group-text" asp-for="Email">Email</label>
        <input class="form-control" type="text" asp-for="Email" required />
    </div>
    <div class="d-flex justify-content-center">
        <input type="submit" class="btn btn-primary col-6" value="Add" />
    </div>
</form>